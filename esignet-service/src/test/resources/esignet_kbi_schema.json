{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "enum": ["email"]
    },
    "controlType": {
      "type": "string",
      "enum": ["textbox"]
    },
    "label": {
      "type": "object",
      "properties": {
        "eng": {
          "type": "string"
        }
      },
      "required": ["eng"]
    },
    "required": {
      "type": "boolean"
    },
    "validators": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["regex"]
          },
          "validator": {
            "type": "string",
            "pattern": "^[^@]+@[^@]+\\.[^@]+$"
          },
          "errorCode": {
            "type": "string",
            "enum": ["Invalid email format"]
          }
        },
        "required": ["type", "validator", "errorCode"]
      }
    }
  },
  "required": ["id", "controlType", "label", "required", "validators"]
}